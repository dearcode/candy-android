<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector">

    <ImageView
        android:id="@+id/iv_userhead_chatlist"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/iv_renzheng"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="39dip"
        android:src="@drawable/tab_find"/>
    
    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_width="match_parent"
        android:layout_height="53dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="13dip"
        android:layout_toRightOf="@+id/iv_userhead_chatlist">

    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="105dip"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="jobs"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            />



    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_username"
        android:layout_marginRight="40dip"
        android:background="@null"
        android:drawablePadding="5dip"
        android:includeFontPadding="false"
        android:paddingTop="5dip"
        android:lines="1"
        android:textColor="@color/color_light"
        android:textSize="12sp"
        android:text="Hello, w is your name?"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="12sp"
        android:text="6,Sep"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/rl_text"
        android:layout_marginLeft="10dip"
        android:background="@color/list_item_divider"/>

</RelativeLayout>